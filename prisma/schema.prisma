generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int        @id @default(autoincrement())
  name      String
  surname   String
  email     String     @unique
  password  String
  role      Role       @default(CANDIDATE)
  createdAt DateTime   @default(now())

  candidate Candidate?   // onDelete sadece defining side'da olacak
  createdForms Form[]    @relation("FormAssigner")
  createdWorkflows Workflow[] @relation("UserCreatedWorkflows")
  createdTemplates FormTemplate[] @relation("UserCreatedTemplates")

  @@map("users")
}

model Candidate {
  id       Int        @id @default(autoincrement())
  user     User       @relation(fields: [userId], references: [id], onDelete: SetNull)
  userId   Int        @unique
  phone    String
  city     String
  platform String
  cvUrl    String
  forms    Form[]
  stages CandidateStage[]

  workflows CandidateWorkflow[]

  @@map("candidates")
}

model Workflow {
  id        Int       @id @default(autoincrement())
  name      String
  stages    Json
  isActive  Boolean    @default(true)
  createdBy Int
  creator   User?      @relation("UserCreatedWorkflows", fields: [createdBy], references: [id], onDelete: SetNull)
  forms     Form[]
  candidateStages CandidateStage[]  

 candidates CandidateWorkflow[]
  createdAt DateTime   @default(now())

  @@map("workflows")
}


model CandidateWorkflow {
  id          Int       @id @default(autoincrement())
  candidate   Candidate @relation(fields: [candidateId], references: [id])
  candidateId Int
  workflow    Workflow  @relation(fields: [workflowId], references: [id])
  workflowId  Int
  assignedBy  Int
  assignedAt  DateTime @default(now())

  @@unique([candidateId, workflowId])

  @@map("candidate_workflow")
}

model FormTemplate {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  fields      Json
  createdBy   Int
  creator     User?    @relation("UserCreatedTemplates", fields: [createdBy], references: [id], onDelete: SetNull)
  createdAt   DateTime @default(now())
  forms       Form[]   @relation("TemplateForms")

  @@map("form_templates")
}

model Form {
  id            Int           @id @default(autoincrement())
  candidate     Candidate?    @relation(fields: [candidateId], references: [id], onDelete: SetNull)
  candidateId   Int?

  template      FormTemplate? @relation("TemplateForms", fields: [templateId], references: [id], onDelete: SetNull)
  templateId    Int?

  title         String
  fileUrl       String?
  note          String?
  status        FormStatus    @default(PENDING)
  stage         FormStage     @default(PRE_INTERVIEW)
  assignedBy    Int?
  assigner      User?         @relation("FormAssigner", fields: [assignedBy], references: [id], onDelete: SetNull)
  workflow      Workflow?     @relation(fields: [workflowId], references: [id], onDelete: SetNull)
  workflowId    Int?
  createdAt     DateTime      @default(now())

  @@map("forms")
}

model CandidateStage {
  id            Int             @id @default(autoincrement())
  candidate     Candidate?      @relation(fields: [candidateId], references: [id], onDelete: SetNull)
  candidateId   Int?
  workflow      Workflow?       @relation(fields: [workflowId], references: [id], onDelete: SetNull)
  workflowId    Int?
  stageName     String
  order         Int
  status        FormStatus      @default(PENDING)
  note          String?
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt

  attachments   CandidateStageAttachment[]

  @@unique([candidateId, workflowId, order])
  @@map("candidate_stages")
}

model CandidateStageAttachment {
  id               Int              @id @default(autoincrement())
  candidateStage   CandidateStage?  @relation(fields: [candidateStageId], references: [id], onDelete: SetNull)
  candidateStageId Int?
  type             AttachmentType
  content          String          
  createdAt        DateTime         @default(now())

  @@map("candidate_stage_attachments")
}

enum AttachmentType {
  NOTE
  FILE
  TEXT
}

enum Role {
  CANDIDATE
  HR
  ADMIN
}

enum FormStatus {
  PENDING
  APPROVED
  DENIED
}

enum FormStage {
  PRE_INTERVIEW
  CASE
  TECH_INTERVIEW
  FINAL_INTERVIEW
  COMPLETED
}
