generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int        @id @default(autoincrement())
  name      String
  surname   String
  email     String     @unique
  password  String
  role      Role       @default(CANDIDATE)
  createdAt DateTime   @default(now())

  candidate Candidate?   // onDelete sadece defining side'da olacak
  createdWorkflows Workflow[] @relation("UserCreatedWorkflows")

  @@map("users")
}

model Candidate {
  id         Int         @id @default(autoincrement())
  user       User        @relation(fields: [userId], references: [id], onDelete: SetNull)
  userId     Int         @unique
  phone      String
  city       String
  platform   String
  cvUrl      String
  stages     CandidateStage[]
  workflows  CandidateWorkflow[]

  @@map("candidates")
}

model Workflow {
  id               Int        @id @default(autoincrement())
  name             String
  stages           Json
  isActive         Boolean     @default(true)
  createdBy        Int
  creator          User?       @relation("UserCreatedWorkflows", fields: [createdBy], references: [id], onDelete: SetNull)
  candidateStages  CandidateStage[]
  candidates       CandidateWorkflow[]
  createdAt        DateTime    @default(now())

  @@map("workflows")
}

model CandidateWorkflow {
  id          Int        @id @default(autoincrement())
  candidate   Candidate  @relation(fields: [candidateId], references: [id])
  candidateId Int
  workflow    Workflow   @relation(fields: [workflowId], references: [id])
  workflowId  Int
  assignedBy  Int
  assignedAt  DateTime   @default(now())

  @@unique([candidateId, workflowId])
  @@map("candidate_workflow")
}

model CandidateStage {
  id            Int             @id @default(autoincrement())
  candidate     Candidate?      @relation(fields: [candidateId], references: [id], onDelete: SetNull)
  candidateId   Int?
  workflow      Workflow?       @relation(fields: [workflowId], references: [id], onDelete: SetNull)
  workflowId    Int?
  stageName     String
  order         Int
  status        StageStatus     @default(PENDING)
  note          String?
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt

  attachments   CandidateStageAttachment[]
  tasks         CandidateStageTask[]

  @@unique([candidateId, workflowId, order])
  @@map("candidate_stages")
}

model CandidateStageAttachment {
  id               Int              @id @default(autoincrement())
  candidateStage   CandidateStage?  @relation(fields: [candidateStageId], references: [id], onDelete: SetNull)
  candidateStageId Int?
  type             AttachmentType
  content          String
  createdAt        DateTime         @default(now())

  @@map("candidate_stage_attachments")
}

model CandidateStageTask {
  id               Int              @id @default(autoincrement())
  candidateStage   CandidateStage   @relation(fields: [candidateStageId], references: [id], onDelete: Cascade)
  candidateStageId Int
  type             StageTaskType
  title            String
  description      String?
  deadline         DateTime?
  scheduledDate    DateTime?        // Görüşme tarihi için
  caseContent      String?          // Case içeriği için
  isRequired       Boolean          @default(true)
  createdBy        Int?
  createdAt        DateTime         @default(now())
  responses        CandidateStageResponse[]
  @@map("candidate_stage_tasks")
}


model CandidateStageResponse {
  id               Int                   @id @default(autoincrement())
  task             CandidateStageTask    @relation(fields: [taskId], references: [id], onDelete: Cascade)
  taskId           Int
  responderId      Int
  content          String
  fileUrl          String?
  selectedDate     DateTime?             // Seçilen tarih için
  createdAt        DateTime              @default(now())
  @@map("candidate_stage_responses")
}

enum AttachmentType {
  NOTE
  FILE
  TEXT
}

enum StageTaskType {
  FILE_UPLOAD      
  DATE_SELECTION  
  CASE_ASSIGNMENT  
  MESSAGE         
  IMAGE_UPLOAD    
}

enum Role {
  CANDIDATE
  HR
  ADMIN
}

enum StageStatus {
  PENDING
  APPROVED
  DENIED
}
