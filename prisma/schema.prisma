generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int        @id @default(autoincrement())
  name      String
  surname   String
  email     String     @unique
  password  String
  role      Role       @default(CANDIDATE)
  createdAt DateTime   @default(now())

  candidate Candidate?
  createdWorkflows Workflow[] @relation("UserCreatedWorkflows")
  assignedWorkflows CandidateWorkflow[] @relation("UserAssignments")

  @@map("users")
}

model Candidate {
  id         Int       @id @default(autoincrement())
  user       User      @relation(fields: [userId], references: [id], onDelete: SetNull)
  userId     Int       @unique
  phone      String
  city       String
  platform   String
  cvUrl      String

  workflows  CandidateWorkflow[]
  stages     CandidateStage[]

  @@map("candidates")
}


model Workflow {
  id               Int        @id @default(autoincrement())
  name             String
  isActive         Boolean     @default(true)
  createdBy        Int
  createdAt        DateTime    @default(now())

  creator          User?       @relation("UserCreatedWorkflows", fields: [createdBy], references: [id], onDelete: SetNull)

  candidateStages CandidateStage[]
  
  stages           Stage[]
  candidates       CandidateWorkflow[]

  @@map("workflows")
}

model Stage {
  id          Int        @id @default(autoincrement())
  name        String
  order       Int
  status      StageStatus @default(PENDING)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  workflow    Workflow   @relation(fields: [workflowId], references: [id], onDelete: Cascade)
  workflowId  Int

  tasks       StageTask[]

  @@map("stages")
}

model StageTask {
  id           Int            @id @default(autoincrement())
  stage        Stage          @relation(fields: [stageId], references: [id], onDelete: Cascade)
  stageId      Int

  title        String
  description  String?
  status       StageTaskStatus @default(PENDING)
  deadline     DateTime?
  isRequired   Boolean        @default(true)

  createdBy    Int?
  createdAt    DateTime       @default(now())

  candidateTasks CandidateStageTask[]

  @@map("stage_tasks")
}

model CandidateWorkflow {
  id          Int        @id @default(autoincrement())

  candidate   Candidate  @relation(fields: [candidateId], references: [id])
  candidateId Int

  workflow    Workflow   @relation(fields: [workflowId], references: [id])
  workflowId  Int

  assignedBy  Int
  assignedByUser User @relation("UserAssignments", fields: [assignedBy], references: [id])

  assignedAt  DateTime   @default(now())

  stages      CandidateStage[]

  @@unique([candidateId, workflowId])
  @@map("candidate_workflow")
}

model CandidateStage {
  id            Int        @id @default(autoincrement())

  candidate     Candidate  @relation(fields: [candidateId], references: [id])
  candidateId   Int

  candidateWorkflow CandidateWorkflow? @relation(fields: [candidateWorkflowId], references: [id])
  candidateWorkflowId Int?


  workflow      Workflow   @relation(fields: [workflowId], references: [id])
  workflowId    Int

  stageName     String
  order         Int
  status        StageStatus  @default(PENDING)
  note          String?

  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  tasks         CandidateStageTask[]

  @@map("candidate_stages")
}

model CandidateStageTask {
  id               Int              @id @default(autoincrement())

  candidateStage   CandidateStage   @relation(fields: [candidateStageId], references: [id], onDelete: Cascade)
  candidateStageId Int

  stageTasks       StageTask?        @relation(fields: [stageTasksId], references: [id], onDelete: Cascade)
  stageTasksId     Int?

  status           StageTaskStatus  @default(PENDING)
  note             String?
  createdAt        DateTime         @default(now())

  responses        CandidateStageResponse[]

  @@map("candidate_stage_tasks")
}


model CandidateStageResponse {
  id               Int                   @id @default(autoincrement())
  task             CandidateStageTask    @relation(fields: [taskId], references: [id], onDelete: Cascade)
  taskId           Int

  responderId      Int
  content          String
  fileUrl          String?
  selectedDate     DateTime?
  createdAt        DateTime              @default(now())

  @@map("candidate_stage_responses")
}


enum Role {
  CANDIDATE
  HR
  ADMIN
}


enum StageStatus {
  PENDING
  APPROVED
  DENIED
}

enum StageTaskStatus {
  PENDING
  APPROVED
  DENIED
}
